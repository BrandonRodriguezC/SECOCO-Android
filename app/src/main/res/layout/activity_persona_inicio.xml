<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".usuarios.persona.Mapa"
    tools:openDrawer="start">

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:visibility="gone"
        app:headerLayout="@layout/header_menu"
        app:menu="@menu/menu" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".usuarios.persona.PersonaInicio">

        <TextView
            android:id="@+id/persona_inicio_Usuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Usuario"
            android:textColor="#3F51B5"
            android:textSize="36sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.78"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.19999999" />

        <TextView
            android:id="@+id/persona_inicio_Nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:text="Nombre Apellido"
            android:textColor="#000000"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.13"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/persona_inicio_Usuario" />

        <TextView
            android:id="@+id/persona_inicio_ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="C.C. 1234567890"
            android:textColor="#000000"
            app:layout_constraintStart_toStartOf="@+id/persona_inicio_Nombre"
            app:layout_constraintTop_toBottomOf="@+id/persona_inicio_Nombre" />

        <TextView
            android:id="@+id/persona_inicio_FechaNacimiento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="04-01-2000"
            android:textColor="#000000"
            app:layout_constraintStart_toStartOf="@+id/persona_inicio_ID"
            app:layout_constraintTop_toBottomOf="@+id/persona_inicio_ID" />

        <TextView
            android:id="@+id/persona_inicio_Correo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="usuario@correo.com"
            android:textColor="#000000"
            app:layout_constraintStart_toStartOf="@+id/persona_inicio_FechaNacimiento"
            app:layout_constraintTop_toBottomOf="@+id/persona_inicio_FechaNacimiento" />

        <TextView
            android:id="@+id/persona_inicio_Direccion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:text="Carrea 1a #2-3"
            android:textColor="#000000"
            app:layout_constraintStart_toEndOf="@+id/persona_inicio_Localidad"
            app:layout_constraintTop_toBottomOf="@+id/persona_inicio_Correo" />

        <TextView
            android:id="@+id/persona_inicio_Localidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Localidad:"
            android:textColor="#9C27B0"
            app:layout_constraintStart_toStartOf="@+id/persona_inicio_Correo"
            app:layout_constraintTop_toBottomOf="@+id/persona_inicio_Correo" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Sintomas:"
            android:textColor="#009688"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/persona_inicio_Localidad"
            app:layout_constraintTop_toBottomOf="@+id/persona_inicio_Localidad" />

        <TextView
            android:id="@+id/persona_inicio_Contacto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="-"
            android:textColor="#D80D0D"
            app:layout_constraintStart_toStartOf="@+id/textView17"
            app:layout_constraintTop_toBottomOf="@+id/textView17" />

        <TextView
            android:id="@+id/persona_inicio_Respiracion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:text="-"
            android:textColor="#D80D0D"
            app:layout_constraintStart_toEndOf="@+id/persona_inicio_Contacto"
            app:layout_constraintTop_toTopOf="@+id/persona_inicio_Contacto" />

        <TextView
            android:id="@+id/persona_inicio_Fatiga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:text="-"
            android:textColor="#D80D0D"
            app:layout_constraintStart_toEndOf="@+id/persona_inicio_Respiracion"
            app:layout_constraintTop_toTopOf="@+id/persona_inicio_Respiracion" />

        <TextView
            android:id="@+id/persona_inicio_Fiebre"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:layout_marginTop="16dp"
            android:text="-"
            android:textColor="#D80D0D"
            app:layout_constraintStart_toStartOf="@+id/persona_inicio_Contacto"
            app:layout_constraintTop_toBottomOf="@+id/persona_inicio_Contacto" />

        <TextView
            android:id="@+id/persona_inicio_Tos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:text="-"
            android:textColor="#D80D0D"
            app:layout_constraintStart_toEndOf="@+id/persona_inicio_Fiebre"
            app:layout_constraintTop_toTopOf="@+id/persona_inicio_Fiebre" />

        <TextView
            android:id="@+id/persona_inicio_Sentidos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:text="-"
            android:textColor="#D80D0D"
            app:layout_constraintStart_toEndOf="@+id/persona_inicio_Tos"
            app:layout_constraintTop_toTopOf="@+id/persona_inicio_Tos" />

        <TextView
            android:id="@+id/textView24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Resultado de examen COVID:"
            android:textColor="#009688"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/textView17"
            app:layout_constraintTop_toBottomOf="@+id/persona_inicio_Fiebre" />

        <TextView
            android:id="@+id/persona_inicio_Resultado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="-"
            android:textColor="#2196F3"
            app:layout_constraintStart_toStartOf="@+id/textView24"
            app:layout_constraintTop_toBottomOf="@+id/textView24" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="142dp"
            android:layout_height="124dp"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="84dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/avatar" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.drawerlayout.widget.DrawerLayout>