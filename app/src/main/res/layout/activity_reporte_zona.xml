<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cns_reporte_zona"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".usuarios.erc_covid.ERCInicio">

    <com.mapbox.mapboxsdk.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        mapbox:mapbox_cameraTargetLat="4.60971"
        mapbox:mapbox_cameraTargetLng="-74.13175"
        mapbox:mapbox_cameraZoom="11.221700784018921" />
    <!--- mapbox:mapbox_cameraBearing="300" -->

    <androidx.cardview.widget.CardView
        android:id="@+id/card_zona"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:visibility="visible"
        card_view:cardCornerRadius="10dp"
        mapbox:layout_constraintBottom_toBottomOf="parent"
        mapbox:layout_constraintEnd_toEndOf="parent"
        mapbox:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/reporte_zona_txt_titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:text="TextView"
                android:textSize="18sp"
                android:textStyle="bold"
                mapbox:layout_constraintBottom_toBottomOf="parent"
                mapbox:layout_constraintEnd_toEndOf="parent"
                mapbox:layout_constraintHorizontal_bias="0.498"
                mapbox:layout_constraintStart_toStartOf="parent"
                mapbox:layout_constraintTop_toTopOf="parent"
                mapbox:layout_constraintVertical_bias="0.039" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="@string/reporteZona_lbl_activo"
                android:textStyle="bold"
                mapbox:layout_constraintBottom_toBottomOf="parent"
                mapbox:layout_constraintEnd_toEndOf="parent"
                mapbox:layout_constraintHorizontal_bias="0.064"
                mapbox:layout_constraintStart_toStartOf="parent"
                mapbox:layout_constraintTop_toBottomOf="@+id/reporte_zona_txt_titulo"
                mapbox:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/reporte_zona_txt_activos"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="TextView"
                android:textStyle="bold"
                mapbox:layout_constraintBottom_toBottomOf="parent"
                mapbox:layout_constraintEnd_toEndOf="parent"
                mapbox:layout_constraintHorizontal_bias="0.456"
                mapbox:layout_constraintStart_toEndOf="@+id/textView4"
                mapbox:layout_constraintTop_toBottomOf="@+id/reporte_zona_txt_titulo"
                mapbox:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="@string/reporteZona_lbl_inActivo"
                android:textStyle="bold"
                mapbox:layout_constraintBottom_toBottomOf="parent"
                mapbox:layout_constraintEnd_toEndOf="parent"
                mapbox:layout_constraintHorizontal_bias="0.064"
                mapbox:layout_constraintStart_toStartOf="parent"
                mapbox:layout_constraintTop_toBottomOf="@+id/textView4"
                mapbox:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/reporte_zona_txt_inactivos"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="TextView"
                android:textStyle="bold"
                mapbox:layout_constraintBottom_toBottomOf="parent"
                mapbox:layout_constraintEnd_toEndOf="parent"
                mapbox:layout_constraintHorizontal_bias="0.456"
                mapbox:layout_constraintStart_toEndOf="@+id/textView6"
                mapbox:layout_constraintTop_toBottomOf="@+id/reporte_zona_txt_activos"
                mapbox:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="@string/reporteZona_lbl_solicitado"
                android:textStyle="bold"
                mapbox:layout_constraintBottom_toBottomOf="parent"
                mapbox:layout_constraintEnd_toEndOf="parent"
                mapbox:layout_constraintHorizontal_bias="0.064"
                mapbox:layout_constraintStart_toStartOf="parent"
                mapbox:layout_constraintTop_toBottomOf="@+id/textView6"
                mapbox:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/reporte_zona_txt_solicitados"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="TextView"
                android:textStyle="bold"
                mapbox:layout_constraintBottom_toBottomOf="parent"
                mapbox:layout_constraintEnd_toEndOf="parent"
                mapbox:layout_constraintHorizontal_bias="0.456"
                mapbox:layout_constraintStart_toEndOf="@+id/textView7"
                mapbox:layout_constraintTop_toBottomOf="@+id/reporte_zona_txt_inactivos"
                mapbox:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="@string/reporteZona_lbl_pendientes"
                android:textStyle="bold"
                mapbox:layout_constraintBottom_toBottomOf="parent"
                mapbox:layout_constraintEnd_toEndOf="parent"
                mapbox:layout_constraintHorizontal_bias="0.064"
                mapbox:layout_constraintStart_toStartOf="parent"
                mapbox:layout_constraintTop_toBottomOf="@+id/textView7"
                mapbox:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/reporte_zona_txt_pendientes"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="TextView"
                android:textStyle="bold"
                mapbox:layout_constraintBottom_toBottomOf="parent"
                mapbox:layout_constraintEnd_toEndOf="parent"
                mapbox:layout_constraintHorizontal_bias="0.456"
                mapbox:layout_constraintStart_toEndOf="@+id/textView8"
                mapbox:layout_constraintTop_toBottomOf="@+id/reporte_zona_txt_solicitados"
                mapbox:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="@string/reporteZona_lbl_examenNoTomado"
                android:textStyle="bold"
                mapbox:layout_constraintBottom_toBottomOf="parent"
                mapbox:layout_constraintEnd_toEndOf="parent"
                mapbox:layout_constraintHorizontal_bias="0.064"
                mapbox:layout_constraintStart_toStartOf="parent"
                mapbox:layout_constraintTop_toBottomOf="@+id/textView8"
                mapbox:layout_constraintVertical_bias="0.0" />


            <TextView
                android:id="@+id/reporte_zona_txt_examenNoTomado"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="TextView"
                android:textStyle="bold"
                mapbox:layout_constraintBottom_toBottomOf="parent"
                mapbox:layout_constraintEnd_toEndOf="parent"
                mapbox:layout_constraintHorizontal_bias="0.456"
                mapbox:layout_constraintStart_toEndOf="@+id/textView9"
                mapbox:layout_constraintTop_toBottomOf="@+id/reporte_zona_txt_pendientes"
                mapbox:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="@string/reporteZona_lbl_totalPersonas"
                android:textStyle="bold"
                mapbox:layout_constraintBottom_toBottomOf="parent"
                mapbox:layout_constraintEnd_toEndOf="parent"
                mapbox:layout_constraintHorizontal_bias="0.064"
                mapbox:layout_constraintStart_toStartOf="parent"
                mapbox:layout_constraintTop_toBottomOf="@+id/textView9"
                mapbox:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/reporte_zona_txt_total"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="TextView"
                android:textStyle="bold"
                mapbox:layout_constraintBottom_toBottomOf="parent"
                mapbox:layout_constraintEnd_toEndOf="parent"
                mapbox:layout_constraintHorizontal_bias="0.456"
                mapbox:layout_constraintStart_toEndOf="@+id/textView11"
                mapbox:layout_constraintTop_toBottomOf="@+id/reporte_zona_txt_examenNoTomado"
                mapbox:layout_constraintVertical_bias="0.0" />

            <Button
                android:id="@+id/btn_estado_localidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reporteZona_btn_estado_localidad"
                mapbox:layout_constraintBottom_toBottomOf="parent"
                mapbox:layout_constraintEnd_toEndOf="parent"
                mapbox:layout_constraintStart_toStartOf="parent"
                mapbox:layout_constraintTop_toBottomOf="@+id/reporte_zona_txt_total"
                mapbox:layout_constraintVertical_bias="0.0" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>